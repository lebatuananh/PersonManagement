@{
    ViewData["Title"] = "Index";
}

@section Script
{
    <script src="~/app/controller/person/index.js"></script>
    <script>
        var personController = new PersonController();
        personController.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3>Person <small>Person Management</small></h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>List Person<small>Person</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                    List Person in Company
                </p>

                <table id="datatable-responsives" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th width="5%">Actions</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Date Of Birth</th>
                        <th>Job</th>
                        <th>Created Date</th>
                        <th>Modified Date</th>
                        <th width="5%">Avatar</th>
                        <th width="5%">Status</th>
                    </tr>
                    </thead>                    
                </table>
                @* <a id="btnEdit" class="btn  btn-sm btn-edit"><i class="fa fa-pencil"></i></a> *@
            </div>
        </div>
    </div>
</div>
@Html.Partial("_AddEditModal")